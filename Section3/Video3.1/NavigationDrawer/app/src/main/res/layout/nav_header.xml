<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_height"
    android:background="@drawable/img_nav_bkg"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:gravity="bottom">
    <ImageView
        android:layout_width="@dimen/nav_user_img_size"
        android:layout_height="@dimen/nav_user_img_size"
        android:src="@drawable/Img_nav_user"
        android:scaleType="centerCrop"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nav_user"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nav_Header"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"/>


</LinearLayout>